<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= '⭐️' * @restaurant.rating %></p>
  <%= link_to "restaurants", restaurants_path  %>
  <p><%= link_to '✏️', edit_restaurant_path(@restaurant)  %></p>
  <%= link_to '🗑', restaurant_path(@restaurant), method: :delete, data: { confirm: 'Are you sure?' }  %>
</div>